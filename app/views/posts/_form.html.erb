<%= render 'shared/error_messages' %>
<div class="container">
<div class="row">
    <div class="col-xs-12">
      
              <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
           
       <div class="form-group">
           <div class="col-sm-offset-2 col-sm-10">
               <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: 'Choose a category' }) %><br>
            </div>
       </div>
       <div class="form-group">
                <div class="control-label col-sm-2">
                   <%= f.label :title %><br>
                 </div>
                <div class="col-sm-8">
                   <%= f.text_field :title, size: '59x2',placeholder: 'Type the post title here' %><br>
                </div>
        </div>
        <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :content %><br>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :content, size: '60x12', placeholder: 'Type the post tect here' %><br>
                </div>
         </div>
         <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :image %><br>
                </div>
                <div class="col-sm-8">
                    <%= f.file_field :image%><br>
                </div>
         </div>


          <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit class: "btn btn-primary" %>
                    </div>
                </div>
           <% end %>
    </div>    
 </div>

 </div>    