<article class="post">
<h3><%= @post.title %></h3>
<p><%= @post.content %></p>
<p> <%= image_tag @post.image_url.to_s, alt: 'Image', class: 'img-responsive', height: 800, width: 400 %></p>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to 'Back', root_path %>
</article>